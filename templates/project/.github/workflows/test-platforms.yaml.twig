            - name: Checkout
              uses: actions/checkout@v4

            - name: Install PHP with extensions
              uses: shivammathur/setup-php@v2
              with:
                  php-version: {% verbatim %}${{ matrix.php-version }}{% endverbatim %}
                  coverage: none

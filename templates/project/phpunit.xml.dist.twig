<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         colors="true"
         failOnWarning="true"
         failOnRisky="true"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         displayDetailsOnAllIssues="true"
         bootstrap="tests/bootstrap.php"
>
    <testsuites>
        <testsuite name="{{ project.title }} Test Suite">
            <directory>./tests/</directory>
        </testsuite>
    </testsuites>

    <source ignoreSuppressionOfDeprecations="true">
        <include>
            <directory>src</directory>
        </include>
    </source>

{% set hasPanther = has_dependency(project_dir, 'symfony/panther') %}
{% set hasDoctrineTest = has_dependency(project_dir, 'dama/doctrine-test-bundle') %}
{% if hasPanther or hasDoctrineTest %}
    <extensions>
{% if hasPanther %}
        <bootstrap class="Symfony\Component\Panther\ServerExtension" />
{% endif %}
{% if hasDoctrineTest %}
        <bootstrap class="DAMA\DoctrineTestBundle\PHPUnit\PHPUnitExtension" />
{% endif %}
    </extensions>

{% endif %}
    <php>
        <ini name="precision" value="8" />
{% if hasPanther %}
        <server name="PANTHER_WEB_SERVER_DIR" value="./tests/App/public/" />
{% endif %}
{% if file_exists(project_dir ~ '/tests/App/AppKernel.php') %}
        <env name="KERNEL_CLASS" value="\Sonata\{{ project.namespace }}\Tests\App\AppKernel" />
        <server name="APP_ENV" value="test" force="true" />
        <server name="APP_DEBUG" value="false" />
{% endif %}
    </php>
</phpunit>

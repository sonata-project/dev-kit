<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         failOnWarning="true"
         failOnRisky="true"
         stopOnFailure="false"
         bootstrap="tests/bootstrap.php"
>
    <testsuites>
        <testsuite name="{{ project.title }} Test Suite">
            <directory suffix="Test.php">./tests/</directory>
        </testsuite>
    </testsuites>

    <coverage>
        <include>
            <directory suffix=".php">./src/</directory>
        </include>
    </coverage>

    <listeners>
        <listener class="Symfony\Bridge\PhpUnit\SymfonyTestsListener"/>
    </listeners>

{% set hasPanther = has_dependency(project_dir, 'symfony/panther') %}
{% set hasDoctrineTest = has_dependency(project_dir, 'dama/doctrine-test-bundle') %}
{% if hasPanther or hasDoctrineTest %}
    <extensions>
{% if hasPanther %}
        <extension class="Symfony\Component\Panther\ServerExtension" />
{% endif %}
{% if hasDoctrineTest %}
        <extension class="DAMA\DoctrineTestBundle\PHPUnit\PHPUnitExtension" />
{% endif %}
    </extensions>

{% endif %}
    <php>
        <ini name="precision" value="8" />
        <env name="SYMFONY_DEPRECATIONS_HELPER" value="max[self]=0" />
{% if hasPanther %}
        <server name="PANTHER_WEB_SERVER_DIR" value="./tests/App/public/" />
{% endif %}
    </php>
</phpunit>

{
    "name": "sonata-project/dev-kit",
    "type": "project",
    "description": "Sonata project tools kit.",
    "license": "MIT",
    "authors": [
        {
            "name": "Sullivan SENECHAL",
            "email": "soullivaneuh@gmail.com"
        },
        {
            "name": "Oskar Stark",
            "email": "oskarstark@googlemail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "cpliakas/git-wrapper": "^3.0",
        "doctrine/annotations": "^1.10",
        "knplabs/github-api": "^2.15",
        "knplabs/packagist-api": "^1.6.1",
        "nyholm/psr7": "^1.2",
        "oskarstark/env-var-extension": "^1.0",
        "symfony/console": "^5.1",
        "symfony/dotenv": "^5.1",
        "symfony/flex": "^1.9",
        "symfony/framework-bundle": "^5.1",
        "symfony/http-client": "^5.1",
        "symfony/monolog-bundle": "^3.5",
        "symfony/notifier": "^5.1",
        "symfony/slack-notifier": "^5.1",
        "symfony/string": "^5.1",
        "symfony/twig-pack": "^1.0",
        "symfony/yaml": "^5.1",
        "webmozart/assert": "^1.9"
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php56": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php72": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "require-dev": {
        "ergebnis/test-util": "^1.2",
        "phpstan/phpstan": "^0.12.48",
        "symfony/debug-bundle": "^5.1",
        "symfony/phpunit-bridge": "^5.1",
        "symfony/stopwatch": "^5.1",
        "symfony/twig-bundle": "^5.1",
        "symfony/var-dumper": "^5.1",
        "symfony/web-profiler-bundle": "^5.1"
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "5.1.*"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    }
}

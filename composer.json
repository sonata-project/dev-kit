{
    "name": "sonata-project/dev-kit",
    "description": "Sonata project tools kit.",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Sullivan SENECHAL",
            "email": "soullivaneuh@gmail.com"
        },
        {
            "name": "Oskar Stark",
            "email": "oskarstark@googlemail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-redis": "*",
        "gitonomy/gitlib": "^1.3",
        "knplabs/github-api": "^3.9",
        "knplabs/packagist-api": "^1.6.1",
        "league/commonmark": "^1.5",
        "nyholm/psr7": "^1.2",
        "oskarstark/env-var-extension": "^1.0",
        "symfony/cache": "^6.2",
        "symfony/console": "^6.2",
        "symfony/dotenv": "^6.2",
        "symfony/flex": "^2.2",
        "symfony/framework-bundle": "^6.2",
        "symfony/http-client": "^6.2",
        "symfony/monolog-bundle": "^3.6",
        "symfony/notifier": "^6.2",
        "symfony/slack-notifier": "^6.2",
        "symfony/string": "^6.2",
        "symfony/twig-bundle": "^6.2",
        "symfony/yaml": "^6.2",
        "twig/extra-bundle": "^3.1",
        "twig/markdown-extra": "^3.1",
        "twig/twig": "^3.0",
        "webmozart/assert": "^1.9"
    },
    "require-dev": {
        "ergebnis/test-util": "^1.2",
        "friendsofphp/php-cs-fixer": "^3.8",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "phpstan/phpstan-webmozart-assert": "^2.0",
        "phpunit/phpunit": "^10.5.54",
        "psalm/plugin-phpunit": "^0.19",
        "psalm/plugin-symfony": "^5.0",
        "rector/rector": "^2.1",
        "symfony/debug-bundle": "^6.2",
        "symfony/stopwatch": "^6.2",
        "symfony/var-dumper": "^6.2",
        "symfony/web-profiler-bundle": "^6.2",
        "vimeo/psalm": "^6.13"
    },
    "replace": {
        "paragonie/random_compat": "^2.0",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php56": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php72": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "symfony/flex": true
        },
        "platform": {
            "php": "8.1.31"
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "6.4.*"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    }
}
